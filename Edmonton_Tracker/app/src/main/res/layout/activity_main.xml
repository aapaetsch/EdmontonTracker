<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.edmonton_tracker.MainActivity">

    <Button
        android:id="@+id/bus_stuff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="busClick"
        android:text="City of Edmonton Transit" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/alerts_stuff"
        android:onClick="alertsClick"
        android:text="City of Edmonton Alerts"/>
</LinearLayout>
